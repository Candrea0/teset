@page "/learnBlazor/bindprop"

<h3>Product</h3>
Name: @Product.Name<br />
Active: @Product.IsActive<br />
Price: @Product.Price<br />
This Product is : @(Product.IsActive ? "Active" : "IsActive")<br />
Property Selected :

<br />

Active: <input type="checkbox" @bind-value="Product.IsActive" checked="@(Product.IsActive?"checked":null)" /> <br />
Price: <input type="number" @bind-value="@Product.Price" @bind-value:event="oninput" /> <br />
Product Properties:
<select @bind="selectedProp">
    @foreach (var prop in Product.ProductProperties)
    {
        <option value="@prop.Key">@prop.Key </option>
    }
</select>


@code {
    Models.LearnBlazorModel.Demo_Product Product = new()
    {
            Id =1,
            Name ="Andrea",
            IsActive = true,
            Price= 10.99,
            ProductProperties = new List<Models.LearnBlazorModel.Demo_ProductProp>()
            {
                new Models.LearnBlazorModel.Demo_ProductProp { Id = 1, Key = "Color", Value= "Black"},
                new Models.LearnBlazorModel.Demo_ProductProp { Id = 2, Key = "Flavor", Value= "Rose Jasmine"},
                new Models.LearnBlazorModel.Demo_ProductProp { Id = 3, Key = "Size", Value= "28oz"},
            }
    };

}
